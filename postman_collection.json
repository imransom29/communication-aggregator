              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"channel\": \"whatsapp\",\n  \"to\": \"+1234567890\",\n  \"body\": \"This is a test WhatsApp message\",\n  \"metadata\": {\n    \"priority\": \"urgent\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/messages",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "messages"]
            },
            "description": "Send a WhatsApp message"
          },
          "response": []
        },
        {
          "name": "Test Duplicate Detection",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"channel\": \"email\",\n  \"to\": \"duplicate@example.com\",\n  \"subject\": \"Duplicate Test\",\n  \"body\": \"This message will be deduplicated\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/messages",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "messages"]
            },
            "description": "Send this request twice to test duplicate detection. Second request should return 409 error."
          },
          "response": []
        },
        {
          "name": "Health Check - Task Router",
