    {
      "name": "Logging Service",
      "item": [
        {
          "name": "Search All Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3003/api/logs/search?limit=50",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3003",
              "path": ["api", "logs", "search"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Search all logs with limit"
          },
          "response": []
        },
        {
          "name": "Search Logs by Service",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3003/api/logs/search?service=task-router&limit=20",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3003",
              "path": ["api", "logs", "search"],
              "query": [
                {
                  "key": "service",
                  "value": "task-router"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Search logs from Task Router service"
