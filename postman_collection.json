                },
                {
                  "key": "limit",
                  "value": "30"
                }
              ]
            },
            "description": "Search only error level logs"
          },
          "response": []
        },
        {
          "name": "Get Logs by Trace ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3003/api/logs/trace/:traceId",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3003",
              "path": ["api", "logs", "trace", ":traceId"],
              "variable": [
                {
                  "key": "traceId",
                  "value": "your-trace-id-here",
                  "description": "Replace with actual trace ID from message response"
                }
              ]
            },
            "description": "Get all logs for a specific trace ID (end-to-end request tracking)"
          },
          "response": []
        },
